<div class="tab-content" id="pills-tabContent" data-filter-events-target="view">
  <div class="tab-pane fade <%= 'show active' if params[:list] == "true" || params[:calendar] != "true" %>" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab" data-filter-events-target="listView">
    <%= render 'class_lists', events: events, events_group: events_group %>
  </div>
  <div class="tab-pane fade container  <%= 'show active' if params[:calendar] == "true" %>" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab" data-filter-events-target="calendarView">
    <%= render 'class_calendar', events: events %>
  </div>
</div>
