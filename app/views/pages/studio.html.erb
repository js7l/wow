<div class="container">
  <div class="card-item">
    <div class="card-image" style="background-image: url( <%= cl_image_path @studio.photo.key, height: 400, crop: :fill%>)"></div>
    <div class="card-item-middle">
      <div class="card-name-avatar">
        <h3><%= @studio.name %></h3>
        <%= @studio.rating %>
      </div>
      <br>
      <div class="item-details d-flex">
        <div data-controller="favourite">
          <p><%= @studio.description %> </p>
          <p><%= @studio.email %></p>
          <p><%= @studio.phone_number %></p>
          <br>
          <button class="btn btn-primary">Contact Us</button>
        </div>
      </div>
    <div class="card">
  </div>
</div>
