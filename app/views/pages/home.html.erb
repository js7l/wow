<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "homepage.jpg" %>');">
  <div class="container">
    <h1>First, find your sport.</h1>
    <%= form_tag events_path, method: :get do %>
      <div class="row g-0 position-relative">
        <div class="col-md-6">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Yoga, surfing, crossfit,..."
        %>
      </div>
      <div class="position-absolute end-0 w-auto">
        <%= link_to "Search", events_path, class: "btn btn-primary mt-2" %>
      </div>
    </div>
  <% end %>
  </div>
</div>

